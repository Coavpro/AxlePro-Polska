---
import Logo from '../assets/logodark.svg'
---

<header class="nav">
    <div class="container row">
     <div class="nav-logo one-third column">
         <a href="#" class="logo-link">
             <img src={Logo} alt="Brand logo">
         </a>
     </div>
    </div>
 </header>


 <style lang="scss">

.nav{
    padding: 5px 0;
    li{
      list-style: none;
      margin-top: 2px;
    }
    .nav-cta{
      text-align: right;
    }
    a:not(.button):not(.logo-link){
      color: #a82222;
      padding: 0 50px;
      text-decoration: none;
    }
    .logo-link img{
      width: 200px;
      margin-top: 5px;
    }
    @media (max-width:700px) {
      nav{
        display: none;
      }
      .nav-cta{
        position: absolute;
        right: 20px;
      }
    }
  } 
 </style>